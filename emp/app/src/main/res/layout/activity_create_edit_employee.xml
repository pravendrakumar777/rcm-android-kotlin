<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add / Edit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" />

        <!-- Row 1: Name + Email -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="NAME"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etEmail"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toEndOf="@id/etName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"/>

        <!-- Row 2: Gender + Manager + Departments -->
        <EditText
            android:id="@+id/etGender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="GENDER"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spManager"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/spManager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toEndOf="@id/etGender"
            app:layout_constraintEnd_toStartOf="@id/spDepartments"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/spDepartments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toEndOf="@id/spManager"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"/>

        <!-- Row 3: Designations + DOB -->
        <Spinner
            android:id="@+id/spDesignations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etGender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etDateOfBirth"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etDateOfBirth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="DOB"
            android:focusable="false"
            android:cursorVisible="false"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etGender"
            app:layout_constraintStart_toEndOf="@id/spDesignations"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"/>

        <!-- Row 4: Date of Joining + Mobile -->
        <EditText
            android:id="@+id/etDateOfJoining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="DOJ"
            android:focusable="false"
            android:cursorVisible="false"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/spDesignations"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etMobile"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etMobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="MOBILE"
            android:inputType="phone"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/spDesignations"
            app:layout_constraintStart_toEndOf="@id/etDateOfJoining"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"/>

        <!-- Row 5: Address -->
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="ADDRESS"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/etDateOfJoining"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Row 6: Postal Code + Salary -->
        <EditText
            android:id="@+id/etPostalCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="PIN"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etSalary"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etSalary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="SALARY"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toEndOf="@id/etPostalCode"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"/>

        <!-- Row 7: City + State -->
        <EditText
            android:id="@+id/etCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="CITY"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etPostalCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etState"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="STATE"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etSalary"
            app:layout_constraintStart_toEndOf="@id/etCity"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"/>

        <!-- Row 8: Country + Pan Number -->
        <EditText
            android:id="@+id/etCountry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="COUNTRY"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etCity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etPanNumber"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etPanNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="PAN"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etState"
            app:layout_constraintStart_toEndOf="@id/etCountry"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"/>

        <!-- Row 9: Aadhaar Number + Bank Name -->
        <EditText
            android:id="@+id/etAadhaarNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="AADHAAR"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etCountry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etBankName"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etBankName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="BANK"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etPanNumber"
            app:layout_constraintStart_toEndOf="@id/etAadhaarNumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"/>

        <!-- Row 10: Account Number + IFSC -->
        <EditText
            android:id="@+id/etBankAccountNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="ACCOUNT"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etAadhaarNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etIfscCode"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etIfscCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="IFSC"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etBankName"
            app:layout_constraintStart_toEndOf="@id/etBankAccountNumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/etIfscCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>