<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F2F2F2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Name Field -->
        <EditText
            android:id="@+id/etName"
            android:hint="Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Email Field -->
        <EditText
            android:id="@+id/etEmail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Mobile Field -->
        <EditText
            android:id="@+id/etMobile"
            android:hint="Mobile"
            android:inputType="phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Gender Field -->
        <EditText
            android:id="@+id/etGender"
            android:hint="Gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etMobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Spinner
            android:id="@+id/spManager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etGender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <!-- Date of Birth Field -->
        <EditText
            android:id="@+id/etDateOfBirth"
            android:hint="Date of Birth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/spManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Date of Joining Field -->
        <EditText
            android:id="@+id/etDateOfJoining"
            android:hint="Date of Joining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etDateOfBirth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Address Field -->
        <EditText
            android:id="@+id/etAddress"
            android:hint="Address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etDateOfJoining"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Postal Code Field -->
        <EditText
            android:id="@+id/etPostalCode"
            android:hint="Postal Code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Spinner
            android:id="@+id/spDepartments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etPostalCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Spinner
            android:id="@+id/spDesignations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/spDepartments"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <!-- EMP CODE Field -->
        <EditText
            android:id="@+id/etEmpCode"
            android:hint="EMP CODE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/spDesignations"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Salary Field -->
        <EditText
            android:id="@+id/etSalary"
            android:hint="salary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_edittext"
            android:padding="14dp"
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etEmpCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:text="Save"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/etSalary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>