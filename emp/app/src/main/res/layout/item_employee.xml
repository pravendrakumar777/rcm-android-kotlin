<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- COLLAPSED HEADER -->
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- NAME -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:textSize="15sp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- OHR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_lock_lock"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelEmpCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OHR :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:textSize="15sp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvOhr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- EMAIL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:textSize="15sp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- MOBILE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOBILE :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:textSize="15sp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- EXPANDABLE DETAILS -->
        <LinearLayout
            android:id="@+id/layoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp">

            <!-- Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GENDER :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- Manager -->
            <!-- Repeat similar blocks for Manager, Designation, Department, DOB, Address, DOJ, Salary, City, State, Country -->

            <!-- MANAGER with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_manage"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MANAGER :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvManager"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- DESIGNATION with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESIGNATION :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvDesignation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- DEPARTMENT with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEPARTMENT :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvDepartment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- DOB with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_today"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelDob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvDob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- ADDRESS with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- DOJ with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_today"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelDateOfJoining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOJ :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvDateOfJoining"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- SALARY with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SALARY (â‚¹):"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvSalary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- CITY with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CITY :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- STATE with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_compass"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATE :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- COUNTRY with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COUNTRY :"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvCountry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#37474F"/>
            </LinearLayout>

            <!-- ACTION BUTTONS -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:enabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop"
                    android:textAllCaps="false"
                    android:backgroundTint="#E53935"
                    android:textColor="#FFFFFF"
                    android:enabled="false"
                    android:alpha="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>