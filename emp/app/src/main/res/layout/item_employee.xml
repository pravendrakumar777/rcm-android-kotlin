<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- NAME -->
        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/labelName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelName"/>

        <!-- EMP CODE -->
        <TextView
            android:id="@+id/labelEmpCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMP ID :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelName"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvEmpCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelEmpCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelEmpCode"/>

        <!-- EMAIL -->
        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelEmpCode"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelEmail"/>

        <!-- MOBILE -->
        <TextView
            android:id="@+id/labelMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOBILE :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelEmail"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelMobile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelMobile"/>

        <!-- GENDER -->
        <TextView
            android:id="@+id/labelGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENDER :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelMobile"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelGender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelGender"/>

        <!-- MANAGER -->
        <TextView
            android:id="@+id/labelManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MANAGER :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelGender"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvManager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelManager"/>

        <!-- DESIGNATION -->
        <TextView
            android:id="@+id/labelDesignation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESIGNATION :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelManager"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvDesignation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelDesignation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelDesignation"/>

        <!-- DEPARTMENT -->
        <TextView
            android:id="@+id/labelDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEPARTMENT :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelDesignation"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvDepartment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelDepartment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelDepartment"/>

        <!-- DOB -->
        <TextView
            android:id="@+id/labelDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelDepartment"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvDob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelDob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelDob"/>

        <!-- ADDRESS -->
        <TextView
            android:id="@+id/labelAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelDob"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelAddress"/>

        <!-- DOJ -->
        <TextView
            android:id="@+id/labelDateOfJoining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOJ :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelAddress"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvDateOfJoining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelDateOfJoining"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelDateOfJoining"/>


        <!-- Salary -->
        <TextView
            android:id="@+id/labelSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALARY (â‚¹):"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelDateOfJoining"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvSalary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelSalary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelSalary"/>

        <!-- City -->
        <TextView
            android:id="@+id/labelCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CITY :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelSalary"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelCity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelCity"/>


        <!-- State -->
        <TextView
            android:id="@+id/labelState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATE :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelCity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelState"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelState"/>

        <!-- Country -->
        <TextView
            android:id="@+id/labelCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COUNTRY :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelState"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelCountry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelCountry"/>

        <!-- Pan Number -->
        <TextView
            android:id="@+id/labelPanNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAN :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelCountry"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvPanNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelPanNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelPanNumber"/>

        <!-- Aadhaar Number -->
        <TextView
            android:id="@+id/labelAadhaarNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AADHAAR :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelPanNumber"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvAadhaarNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelAadhaarNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelAadhaarNumber"/>


        <!-- Bank Name -->
        <TextView
            android:id="@+id/labelBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BANK :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelAadhaarNumber"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvBankName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelBankName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelBankName"/>

        <!-- Account Number -->
        <TextView
            android:id="@+id/labelBankAccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCOUNT :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelBankName"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvBankAccountNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelBankAccountNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelBankAccountNumber"/>


        <!-- IFSC CODE -->
        <TextView
            android:id="@+id/labelIfscCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IFSC :"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelBankAccountNumber"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvIfscCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#37474F"
            app:layout_constraintStart_toEndOf="@id/labelIfscCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelIfscCode"/>

        <!-- EDIT BUTTON -->
        <Button
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textAllCaps="false"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:enabled="false"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvIfscCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDelete"/>

        <!-- DROP BUTTON -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Drop"
            android:textAllCaps="false"
            android:backgroundTint="#E53935"
            android:textColor="#FFFFFF"
            android:enabled="false"
            android:alpha="0.5"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvIfscCode"
            app:layout_constraintStart_toEndOf="@id/btn"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>